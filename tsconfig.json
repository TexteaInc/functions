{
  "compilerOptions": {
    "incremental": true,
    "module": "ESNext",
    "outDir": "dist",
    "baseUrl": "./src",
    "strictNullChecks": true,
    "emitDeclarationOnly": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "declaration": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "lib": ["ESNext"],
    "skipLibCheck": false,
    "moduleResolution": "Node",
    "target": "ESNext",
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
